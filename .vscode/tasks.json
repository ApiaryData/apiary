{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "cargo",
            "command": "build",
            "args": [
                "--workspace"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "cargo",
            "command": "test",
            "args": [
                "--workspace"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "clippy",
            "type": "cargo",
            "command": "clippy",
            "args": [
                "--workspace",
                "--",
                "-D",
                "warnings"
            ]
        },
        {
            "label": "python-build",
            "type": "shell",
            "command": "cd crates/apiary-python && maturin develop",
            "group": "build"
        },
        {
            "label": "full-check",
            "dependsOn": [
                "clippy",
                "test",
                "python-build"
            ],
            "group": "test"
        }
    ]
}